<Window x:Class="CrismeyriP2_Apl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrismeyriP2_Apl"
        mc:Ignorable="d"
        Title="Registro de Proyectos" Height="400" Width="400">
    <Grid>
<StackPanel>
            <Menu Height="24" FontSize="15">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="rProyectosMenuItem" Click="rProyectosMenuItem_Click" Header="Registrar "/>
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem x:Name="cTareasMenuItem" Click="cTareasMenuItem_Click" Header="Consultar "/>
                </MenuItem>

            </Menu>
        </StackPanel>
    </Grid>
</Window>
